{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build API",
        "command": "dotnet",
        "type": "process",
        "args": ["build"],
        "problemMatcher": "$msCompile",
        "group": "build",
        "options": {
          "cwd": "${workspaceFolder}/API"
        }
      },
      {
        "label": "build Angular",
        "command": "ng",
        "type": "shell",
        "args": ["serve"],
        "isBackground": true,
        "problemMatcher": {
          "owner": "typescript",
          "source": "ts",
          "applyTo": "closedDocuments",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^(.*?)\\((\\d+),(\\d+)\\):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*\\[ng serve\\].*",
            "endsPattern": ".*Compiled successfully.*"
          }
        },
        "group": "build",
        "options": {
          "cwd": "${workspaceFolder}/mala-sapa-webshop-frontend"
        }
      }
    ]
  }
  